{% extends "CACourrierBundle::layout.html.twig" %}

{% block title %}
  Liste - {{ parent() }}
{% endblock %}

{% block cacourrier_body %}

            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Liste de l'ensemble des courriers non archivés.</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="#">Settings 1</a>
                          </li>
                          <li><a href="#">Settings 2</a>
                          </li>
                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <p>Simple table with project listing with progress and editing options</p>

                    <!-- start project list -->
                    <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 5%">N°</th>
                          <th style="width: 20%">Objet</th>
                          <th>Type</th>
                          <th>Correspondant</th>
                          <th>Statut</th>
                          <th style="width: 20%">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                           {% for courrier in listCourriers %}
                                <tr>
                                  <td>{{ courrier.numAttribution }}</td>
                                  <td>
                                    <a href="{{ path('ca_courrier_view', {'id': courrier.id}) }}">{{ courrier.objet }}</a>
                                    <br />
                                    <small>{{ courrier.dateCourrier|date('d-m-Y') }}</small>
                                  </td>
                                  <td>
                                    {% if courrier.type == true %}
                                        Courrier Arrivée
                                    {% else %}
                                        Courrier Départ
                                    {% endif %}
                                  </td>
                                  <td>
                                    {{ courrier.correspondant.nom }}
                                  </td>
                                  <td>
                                        {% if courrier.lu == true %}
                                            <button type="button" class="btn btn-default btn-xs">Lu</button>
                                        {% else %}
                                            <button type="button" class="btn btn-success btn-xs">Non Lu</button>
                                        {% endif %}
                                      
                                        {% if courrier.attribuated == true %}
                                            <button type="button" class="btn btn-default btn-xs">Attribué</button>
                                        {% else %}
                                            <button type="button" class="btn btn-danger btn-xs">Non Attribué</button>
                                        {% endif %}
                                      
                                        {% if courrier.archived == true %}
                                            <button type="button" class="btn btn-default btn-xs">Archivé</button>
                                        {% else %}
                                            <button type="button" class="btn btn-success btn-xs">Non Archivé</button>
                                        {% endif %}
                                  </td>
                                  <td>
                                    <!--<a href="{{ path('ca_courrier_view', {'id': courrier.id}) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Voir </a>
                                    <a href="{{ path('ca_courrier_edit', {'id': courrier.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a>
                                    <a href="{{ path('ca_courrier_attribuate', {'id': courrier.id}) }}" class="btn btn-dark btn-xs"><i class="fa fa-users"></i> Attribuer </a>
                                    <a href="{{ path('ca_courrier_archive', {'id': courrier.id}) }}" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Archiver </a>
                                    <a href="{{ path('ca_courrier_delete', {'id': courrier.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a>-->
                                        <div class="btn-group">
                                          <button type="button" class="btn btn-danger">Actions</button>
                                          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                          </button>
                                          <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ path('ca_courrier_view', {'id': courrier.id}) }}"><i class="fa fa-folder"></i> Voir</a>
                                            </li>
                                            <li><a href="{{ path('ca_courrier_edit', {'id': courrier.id}) }}"><i class="fa fa-pencil"></i> Modifier</a>
                                            </li>
                                            <li><a href="{{ path('ca_courrier_attribuate', {'id': courrier.id}) }}"><i class="fa fa-users"></i> Attribuer</a>
                                            </li>
                                            <li class="divider"></li>
                                            <li><a href="{{ path('ca_courrier_archive', {'id': courrier.id}) }}"><i class="fa fa-pencil"></i> Archiver</a>
                                            <li><a href="{{ path('ca_courrier_delete', {'id': courrier.id}) }}"><i class="fa fa-trash-o"></i> Supprimer</a>
                                            </li>
                                          </ul>
                                        </div>
                                  </td>
                                </tr>
                           {% endfor %}
                      </tbody>
                    </table>
                    <!-- end project list -->

                  </div>
                </div>
              </div>
            </div>
{% endblock %}
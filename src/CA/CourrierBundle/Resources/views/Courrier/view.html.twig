{% extends "CACourrierBundle::layout.html.twig" %}

{% block title %}
  Lecture d'un courrier  - {{ parent() }}
{% endblock %}

{% block cacourrier_body %}

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>
                        {% if courrier.type == true %}
                            Courrier Arrivée
                        {% else %}
                            Courrier Départ
                        {% endif %}
                    </h2>
                      
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a href="{{ path('ca_courrier_home', {'page': '1'}) }}" class="btn btn-default btn-xs"><i class="fa fa-chevron-left"></i> Retour </a></li>
                      <li><a href="{{ path('ca_courrier_edit', {'id': courrier.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a></li>
                      <li><a href="{{ path('ca_courrier_attribuate', {'id': courrier.id}) }}" class="btn btn-dark btn-xs"><i class="fa fa-pencil"></i> Attribuer </a></li>
                      <li><a href="{{ path('ca_courrier_archive', {'id': courrier.id}) }}" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Archiver </a></li>
                      <li><a href="{{ path('ca_courrier_delete', {'id': courrier.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a></li>
                      <!--<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="#">Settings 1</a>
                          </li>
                          <li><a href="#">Settings 2</a>
                          </li>
                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>-->
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="col-md-5 col-sm-5 col-xs-12">
                          <p>
                                {% if courrier.type == true %}
                                    Courrier Arrivée reçu de
                                {% else %}
                                    Courrier Départ envoyé à
                                {% endif %}
                              <a href="{{ asset(courrier.fichier.webPath) }}">{{ courrier.correspondant.nom }}</a> le {{ courrier.dateCourrier|date('d-m-Y') }}, numéro d'attribution {{ courrier.numAttribution }}.</p>
                          Objet: {{ courrier.objet }}<br />
                          Référence: {{ courrier.reference }}
                      </div>
                      <div class="col-md-7 col-sm-7 col-xs-12" id="pdf">
                          <object data="{{ asset(courrier.fichier.webPath) }}" type="application/pdf" width="100%" height="100%">
                            <p>Télécharger : <a href="{{ asset(courrier.fichier.webPath) }}">Fichier_client_micronet.pdf</a></p>
                          </object>
                      </div>
                  </div>
                </div>
              </div>
            </div>
{% endblock %}